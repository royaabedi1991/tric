<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crd_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SubscribeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:gravity="bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo_final" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".22"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Trick"
            android:textColor="@color/colorText"
            android:textSize="30dp"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="کد ارسال شده توسط پیامک را در قسمت زیر وارد کنید"
            android:textColor="#002F31"
            android:textSize="15dp"
            android:textStyle="bold"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <EditText
            android:id="@+id/etPin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#605668"
            android:gravity="center"
            android:hint="کد ارسال شده"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:gravity="top|center_horizontal"
        android:orientation="vertical">


        <ProgressBar
            android:id="@+id/pr_subscribe"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:indeterminate="true"
            android:indeterminateTint="#654069"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone"

            />


        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/sub"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/toolbar_back"
            android:text="عضویت"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TVmasege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#002F31"
            android:textSize="17dp"
            android:text="شماره نادرست"
            android:textStyle="bold"
            />
    </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>