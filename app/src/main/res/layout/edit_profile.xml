<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/custom_popup"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.002"
            android:gravity="right"
            android:paddingRight="4dp">

            <ImageButton
                android:id="@+id/close_popup"
                android:layout_width="34dp"
                android:layout_height="31dp"
                android:background="#00FAF9F9"
                android:src="@android:drawable/ic_delete" />


        </RelativeLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.004"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/btnClose_dialog_sharayet"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:text="ویرایش پروفایل"
                android:textColor="#000"
                android:textSize="19dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.003"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="نام: "
                android:textColor="#000"
                android:textSize="17dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.003"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="bottom">

            <EditText
                android:id="@+id/FamilyName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="نام خانوادگی: "
                android:textColor="#000"
                android:textSize="17dp"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.005"
            android:orientation="horizontal"
            android:paddingLeft="17dp"
            android:gravity="bottom">

            <Button
                android:id="@+id/btn_taeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text=" تایید "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"


                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
